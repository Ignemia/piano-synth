{
  "input_processor": {
    "version": "1.0.0",
    "midi": {
      "auto_detect_devices": true,
      "device_scan_interval_ms": 1000,
      "device_patterns": {
        "piano": ["keyboard", "piano", "digital piano", "oxygen", "m-audio"],
        "drum": ["drum", "percussion", "pad", "trigger"],
        "controller": ["control", "mixer", "fader", "knob"]
      },
      "hot_plug_support": true,
      "max_devices": 16
    },
    "processing": {
      "input_buffer_size": 1024,
      "max_events_per_poll": 256,
      "timestamp_precision": "high_resolution",
      "event_filtering": {
        "enable_running_status": true,
        "filter_active_sensing": true,
        "filter_clock": true
      }
    },
    "devices": {
      "default_channel_mapping": "auto",
      "enable_device_specific_configs": true,
      "device_timeout_ms": 5000
    },
    "debugging": {
      "log_raw_events": false,
      "log_device_changes": true,
      "dump_unknown_events": false
    }
  }
}
