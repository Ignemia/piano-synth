{
  "core_engine": {
    "version": "1.0.0",
    "dll_search_paths": [
      "./dlls",
      "/usr/local/lib/piano-synth",
      "./build/dlls"
    ],
    "auto_load_dlls": {
      "input": "libpiano_input.so",
      "abstraction": "libpiano_abstraction.so", 
      "output": "libpiano_output.so"
    },
    "default_instruments": [
      {
        "id": "piano1",
        "dll": "libpiano_instrument.so",
        "channels": [0, 1, 2, 3, 4, 5, 6, 7],
        "priority": 1
      }
    ],
    "audio": {
      "sample_rate": 44100,
      "buffer_size": 512,
      "max_polyphony": 256,
      "master_volume": 0.8
    },
    "performance": {
      "max_cpu_usage": 0.75,
      "audio_thread_priority": "high",
      "enable_profiling": false
    },
    "logging": {
      "level": "info",
      "file": "piano_synth.log",
      "max_file_size_mb": 10
    }
  }
}
